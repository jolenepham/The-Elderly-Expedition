<ToDoCard>
    elevation: 10
    md_bg_color: 1, 1, 1, 1
    radius: [8]
    size_hint_y: 0.1

    MDFloatLayout:
        id: bar
        size_hint: 0.1, 1
        pos_hint: {"center_x": 0.001, "center_y": 0.5}
        md_bg_color: 1, 170/255, 23/255, 1

    MDLabel:
        text: root.title
        markup: True
        font_name: "Arial"
        font_size: "20sp"
        size_hint_x: 0.8
        pos_hint: {"center_x": 0.5, "center_y": 0.8}

    MDCheckbox:
        size_hint: None, None
        size: "65dp", "65dp"
        unselected_color: 1, 170/255, 23/255, 1
        selected_color: 0, 0.7, 0.09, 1
        pos_hint: {"center_x": 0.95, "center_y": 0.5}
        on_active:
            app.on_complete(*args, description, bar)


    MDLabel:
        id: description
        text: root.description
        font_name: "Arial"
        markup: True
        font_size: "17sp"
        size_hint_x: 0.9
        line_height: 0.8
        pos_hint: {"center_x": 0.55, "center_y": 0.3}

MDScreen:
    date:date
    todo_list: todo_list
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDLabel:
            text:"[b]My Tasks[/b]"
            markup: True
            pos_hint: {"center_x": 0.6, "center_y": 0.95}
            font_name: "Arial"
            font_size: "35sp"
        MDLabel:
            id: date
            text: ""
            pos_hint: {"center_x": 0.6, "center_y": 0.9}
            font_name: "Arial"
            font_size: "18sp"
        MDIconButton:
            icon: "plus"
            pos_hint: {"center_x": 0.89, "center_y": 0.925}
            user_font_size: "30sp"
            md_bg_color: 1, 170/255, 23/255, 1
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "add_task"
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: 0.85
            pos_hint: {"center_x": 0.5, "y": 0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 10
